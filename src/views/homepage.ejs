<!--product cards start-->
<ul class="container-product" id="myUL">
  <%
  for(let i = 0; i < size; i++){

  %>
    <li class="product">
      <div class="product-card">
        <h2 class="name"><%= items[i]["name"] %></h2>
        <span class="price">Rs <%= (Math.round(items[i]["price"] * 100) / 100).toFixed(2) %></span>
        <a class="popup-btn" href="/item/<%=items[i]["item_id"]%>">View item</a>
        <object data="/uploads/<%= items[i]["cover_photo"] %>" type="image/jpg" class="product-img">
            <img src="https://via.placeholder.com/250x300" class="product-img" alt="">
        </object>
      </div>
    </li>

  <%}%>
</ul>
<!--product cards end-->
</body>

</html>
