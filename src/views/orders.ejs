<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <%-include('partials/vendorUILinks.ejs') %>
        <link rel="stylesheet" href="css/orders.css" />
        <title>Orders</title>
    </head>

    <body>
        <%- include('partials/navbar.ejs', {activeTab: "Orders"}) %>
        <%-include('partials/sidebar.ejs');%>
        <div id="second" class="sub-division">
            <div class="container">
                <div class="search-bar-area row">
                    <div class="col-md-12">
                        <div class="input-group">
                            <div class="form-outline">
                                <input
                                    type="search"
                                    id="search-text"
                                    class="form-control search-input"
                                    placeholder="Enter Customer Name"
                                    autocomplete="off"
                                />
                            </div>
                            <button id="search-btn" type="button" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                            <button id="search-clear-btn" type="button" class="btn btn-danger">
                                <i class="fas fa-close"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="order-container col-md-12">
                        <div class="table-responsive table-all">
                            <table
                                class="table table-striped table-sm table-hover"
                            >
                                <thead>
                                    <tr>
                                        <th scope="col">Order #</th>
                                        <th scope="col">Customer Name</th>
                                        <th scope="col">Purchased On</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (let i=0; i < orders.length; i++) {%>
                                    <tr>
                                        <td><a href="/order/<%= orders[i].order_id %>"><%= orders[i].order_id %></a></td>
                                        <td class="customer-name"><%= orders[i].customer_name %></td>
                                        <td>
                                            <%= new
                                            Date(orders[i].date_time).toLocaleString()
                                            %>
                                        </td>
                                        <td><%= orders[i].status %></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/scripts.ejs') %>
        <script src="/javascript/orders.js"></script>
    </body>
</html>
