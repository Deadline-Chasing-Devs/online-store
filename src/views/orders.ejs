<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Orders</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link href="css/vendor.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar.ejs', {activeTab: "order"}) %>
    <div class="container-fluid">
      <div class="row">
        <%- include('partials/sidebar.ejs') %>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class=" vendor-heading d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <h1>Orders</h1>
          </div>

          <div class="table-responsive top-space">
            <table class="table table-striped table-sm table-hover">
              <thead>
                <tr>
                  <th scope="col">Order #</th>
                  <th scope="col">Purchased On</th>
                  <th scope="col">Customer Name</th>
                  <th scope="col">Subtotal</th>
                  <th scope="col">Status</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <%for(i=0; i<50; i++){%>
                <tr>
                  <th scope="row">#00110005<%=i %></th>
                  <td>2022-04-26 22:30:56</td>
                  <td>Mr. Place Holder</td>
                  <td>$399.00</td>
                  <td>Pending</td>
                  <td>
                    <button type="button" class="btn btn-primary">View</button>
                  </td>
                </tr>
                <%}%>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>
    <%- include('partials/scripts.ejs') %>
  </body>
</html>
