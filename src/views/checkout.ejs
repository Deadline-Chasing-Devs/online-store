<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        <link
            href="https://fonts.googleapis.com/css?family=Montserrat"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
        />
        <link rel="stylesheet" href="/css/checkout.css" />
        <title>Checkout</title>
    </head>

    <body>
        <!--navbar start-->
        <%- include("partials/customerNavBar", { searchBar: false, active: "" }); %>
        <!--navbar end-->

        <!--customer details start-->
        <div class="customer_info">
            <h1
                style="
                    font-family: Montserrat;
                    font-weight: 800;
                    color: rgb(30, 149, 0);
                "
            >
                Checkout
            </h1>
            <form
                id="checkout-form"
                class="form-inline"
                action="/checkout"
                method="post"
                autocomplete="off"
            >
                <h2>Customer Details</h2>
                <label for="name" style="margin-top: 40px">Name:</label>
                <input
                    id="name"
                    placeholder="Enter name"
                    name="name"
                    required
                />
                <label for="no">Contact Number:</label>
                <input
                    type="tel"
                    id="no"
                    placeholder="Enter phone number"
                    name="contactNumber"
                    required
                />
                <label for="address">Delivery Address:</label>
                <input
                    type="text"
                    id="address"
                    placeholder="Enter delivery address"
                    name="address"
                    required
                />
                <label for="email">Email:</label>
                <input
                    type="email"
                    id="email"
                    placeholder="Enter email"
                    name="email"
                    required
                />
            </form>
        </div>
        <!--customer details end-->

        <!--cart items start-->

        <div class="small-container cart-page">
            <h2>Shopping cart</h2>
            <table>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Subtotal</th>
                </tr>
                <% if (Object.entries(cart).length) { %> <% for (const [itemId,
                item] of Object.entries(cart.items)) { %>
                <tr id="<%= itemId %>">
                    <td>
                        <div>
                            <p><%= item.name %></p>
                            <small
                                >Price: Rs. <%= (Math.round(item.price * 100) /
                                100).toFixed(2) %>
                            </small>
                        </div>
                    </td>
                    <td><%= item.qty %></td>
                    <td>
                        <%= (Math.round(item.price * item.qty * 100) /
                        100).toFixed(2) %>
                    </td>
                </tr>
                <% } %> <% } %>
            </table>

            <div class="total-price">
                <table>
                    <tr>
                        <td>Total</td>
                        <td>
                            Rs. <%= cart.totalPrice ?
                            (Math.round(cart.totalPrice * 100) / 100).toFixed(2)
                            : '0.00' %>
                        </td>
                    </tr>
                    <tr>
                        <td><button id="cancel">Cancel</button></td>
                        <td>
                            <button type="submit" form="checkout-form">Order now</button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <!--cart items end-->
        <script src="/javascript/checkout.js"></script>
    </body>
</html>
