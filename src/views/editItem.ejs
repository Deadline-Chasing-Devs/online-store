<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%-include('partials/vendorUILinks.ejs') %>
    <link href="css/newItem.css" rel="stylesheet" />

    <title>Edit Item</title>
  </head>
  <body>
    <%- include('partials/navbar.ejs', {activeTab: "Edit Item - Mobile Phone 3000"}) %> 
    <%- include('partials/sidebar.ejs') %>

    <div id="second" class="sub-division">
      <div class="container">
        <form action="">
          <div class="vendor-form">

            <div class="row mb-3">
              <label for="colFormLabel" class="col-sm-2 col-form-label"
                >ID</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="colFormLabel"
                  placeholder="Item ID"
                />
              </div>
            </div>

            <div class="row mb-3">
              <label for="colFormLabel" class="col-sm-2 col-form-label"
                >Item Name</label
              >
              <div class="col-sm-10">
                <input
                  type="text"
                  class="form-control"
                  id="colFormLabel"
                  placeholder="Item Name"
                />
              </div>
            </div>

            <div class="row mb-3">
              <label for="colFormLabel" class="col-sm-2 col-form-label"
                >Description</label
              >
              <div class="col-sm-10">
                <textarea
                  class="form-control"
                  id="exampleFormControlTextarea1"
                  rows="3"
                  placeholder="Item Description"
                ></textarea>
              </div>
            </div>

            <div class="row mb-3">
              <label for="colFormLabel" class="col-sm-2 col-form-label"
                >Price</label
              >
              <div class="col-sm-10">
                <input
                  type="number" min="0"
                  class="form-control"
                  id="colFormLabel"
                  placeholder="Item Price"
                />
              </div>
            </div>

            <div class="row mb-3">
              <label for="colFormLabel" class="col-sm-2 col-form-label"
                >Availability</label
              >
              <div class="col-sm-10">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="exampleRadios"
                    id="exampleRadios1"
                    value="option1"
                  />
                  <label class="form-check-label" for="exampleRadios1">
                    In Stock
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="exampleRadios"
                    id="exampleRadios2"
                    value="option2"
                  />
                  <label class="form-check-label" for="exampleRadios2">
                    Out Of Stock
                  </label>
                </div>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-12">
                <article>
                  <label class="form-check-label" for="files"
                    >Select multiple files</label
                  >
                  <input class="form-control" id="files" type="file" multiple />
                </article>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-sm-12">
                <article>
                  <div class="overflow-auto" style="min-height:500px; max-height:700px; border-style: solid; border-color: rgb(189, 189, 189); border-radius: .25rem; border-width:1px ; background-color: white;">
                    <output id="result" />

                    <%for(i=0; i<50; i++){%>

                    <div class="card vendor-item-image" style="width: 18rem;">
                      <img src="https://socialistmodernism.com/wp-content/uploads/2017/07/placeholder-image.png?w=640" class="card-img-top" alt="...">
                      <div class="card-body">
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                      </div>
                    </div>
                    <%}%>
                  </div>
                </article>
              </div>
            </div>

            <div class="mb-3">
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-success">Update</button>
                <button type="button" class="btn btn-danger">Discard</button>
              </div>
            </div>

          </div>
        </form>
      </div>
    </div>

    <%- include('partials/scripts.ejs') %>
    <script src="javascript/vendorNewItem.js"></script>
  </body>
</html>
